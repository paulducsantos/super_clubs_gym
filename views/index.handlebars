<div>
	<h1>Super Clubs Gym!</h1>
</div>
<div>
	<div> 	
	  {{#each super_clubs_data}}
	  	{{#if this.active}}
	  	<div style="border-style: solid; width: 180px; margin-bottom: 15px; padding: 6px; background-color:Teal; color: white;">  		
			<div>
				<pre>{{this.id}}. {{this.name}}</pre>
				<pre>Visit count: {{this.visit_count}}</pre>
			</div>
			<div>
				<form method="POST" action="/update?_method=PUT">
					<input type="hidden" type="text" name="member_id" value={{this.id}}>
					<button type="submit" class="btn btn-default">Add Visit Count</button>
				</form>
			</div>
			<div>
				<form method="POST" action="/delete?_method=DELETE">
					<input input type="hidden" type="text" name="member_id" value={{this.id}}><br>
					<button type="submit" class="btn btn-default">Remove Member</button>
				</form>
			</div>
	  	</div>
		{{/if}}
	  {{/each}}
	</div>
</div>
<div>
</div>

<div>
	<form action="/create" method="POST" style="width: 200px; padding: 6px;">
		<textarea class="form-control" type="text" name="member_name" value="" id="enter_text"></textarea>
		<button type="submit" class="btn btn-primary" id="text-enter-button">Add New Member</button>
	</form>
	<p>Add a new member by entering in his/her name.</p>
</div>